<Window x:Class="Modern.View.AdaugareOm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Modern.View"
                mc:Ignorable="d"
        Title="AdaugareOm" Height="300" Width="500"
        ResizeMode="NoResize"
WindowStartupLocation="CenterScreen"
        Background="Transparent"
        WindowStyle="None"
AllowsTransparency="True">

    <Border Background="{Binding Gri}"
            BorderBrush="{Binding Galben}"
 BorderThickness="3"
            CornerRadius="22">
        <Grid>

            <StackPanel Width="200"
                        Margin="0,10,0,0">

                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="{Binding Galben}">
                    Client Nou
                </TextBlock>

                <TextBlock
                    Margin="0,30,0,0"
                    Foreground="{Binding Galben}">Nume:
                </TextBlock>

                <TextBox x:Name="txtUser"
        
         FontFamily="Georgia"
         BorderBrush="{Binding Galben}"
         BorderThickness="0,0,0,1"
         Height="28"
         VerticalContentAlignment="Center"
         Margin="0,5,0,0"
         Foreground="{Binding Rosu}"
         CaretBrush="{Binding Rosu}"
         Padding="25,0,0,0"
         
                         Text="{Binding Username}">

                    <TextBox.Background>
                        <ImageBrush ImageSource="/imagini/usericon-removebg-preview.png"
                    AlignmentX="Left"
                    Stretch="Uniform"/>
                    </TextBox.Background>

                </TextBox>

                

                <Button 
x:Name="btnLogin"
Margin="0,50,0,0"
BorderThickness="0"
Content="Adauga"
Foreground="{Binding Gri}"
FontSize="20"
Cursor="Hand"

FontFamily="Georgia"
Command="{Binding AdgOm}"
CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
>

                    
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Height="40" Width="150"
            CornerRadius="9"
            Background="{Binding Galben}">
                                <ContentPresenter VerticalAlignment="Center"
                          HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button
                    Margin="0,20,0,0"
                    BorderThickness="0"
                    Content="Anulare"
Foreground="{Binding Gri}"
FontSize="20"
Cursor="Hand"
                    Click="Anulare">

                    

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Height="35" Width="120"
                    CornerRadius="9"
                    Background="{Binding Rosu}">
                                <ContentPresenter VerticalAlignment="Center"
                                  HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>

                </Button>


            </StackPanel>

        </Grid>
    </Border>


</Window>
