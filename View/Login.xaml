<Window x:Class="Modern.View.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Modern.View"
        mc:Ignorable="d"
        Title="Login" Height="550" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        MouseDown="Miscare_Ecran"
        Background="Transparent"
        AllowsTransparency="True">


    <Border CornerRadius="22">
        <Border.Background>
            <ImageBrush ImageSource="E:\seincearca\Modern\imagini\somo.jpg"/>
        </Border.Background>
        <Border CornerRadius="20"
            Background="#343131"
            BorderBrush="#D8A25E"
             BorderThickness="3"
                Opacity="0.95">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition />

                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>

                        <ColumnDefinition Width="163*"/>
                        <ColumnDefinition Width="571*"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="10"/>

                    </Grid.ColumnDefinitions>

                    <TextBlock Text="LOG IN"
                   Foreground="#EEDF7A"
                   FontSize="15"
                   VerticalAlignment="Center"
                   Margin="20,0,0,0"
                   Grid.Column="0"
                           FontFamily="Montserrat" Grid.ColumnSpan="2"/>

                    <Button Grid.Column="2"
                x:Name="btnminimize"
                
                BorderThickness="0"
                Content="-"
                Foreground="#343131"
                FontSize="12"
                Cursor="Hand"
                Click="Butonminimize">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#D8A25E"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#854836"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Height="18" Width="18"
                                    CornerRadius="9"
                                    Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>

                    </Button>

                    <Button
                    Grid.Column="3"
                    x:Name="btnexit"
                    BorderThickness="0"
                    Content="X"
                    FontSize="12"
                    Cursor="Hand"
                    Click="Butonclose">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#A04747"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#854836"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18"
                Height="18"
                CornerRadius="9"
                Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                  HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>

                    </Button>

                </Grid>

                <StackPanel Width="250"
                        Grid.Row="1"
                        Orientation="Vertical"
                        Margin="0,35,0,0"
                        >

                  

                    <TextBlock 
                    Text="Somo Kickboxing"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    FontSize="30"
                    FontFamily="Georgia"
                    Foreground="#A04747"/>

                    <TextBlock Text="Administrare sala de kickbox"
                           Foreground="#D8A25E"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Margin="0,5,0,0"/>

                    <TextBlock Text="username:"
           Foreground="#D8A25E"
           TextWrapping="Wrap"
           TextAlignment="Left"
           Margin="0,130,0,0"/>

                    <TextBox x:Name="txtUser"
                            
                             FontFamily="Georgia"
                             BorderBrush="#D8A25E"
                             BorderThickness="0,0,0,1"
                             Height="28"
                             VerticalContentAlignment="Center"
                             Margin="0,5,0,0"
                             Foreground="#A04747"
                             CaretBrush="#A04747"
                             Padding="25,0,0,0"
                             KeyDown="MutalaParola"
                             Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}">

                        <TextBox.Background>
                            <ImageBrush ImageSource="/imagini/usericon-removebg-preview.png"
                                        AlignmentX="Left"
                                        Stretch="Uniform"/>
                        </TextBox.Background>

                    </TextBox>

                    <TextBlock Text="Password:"
Foreground="#D8A25E"
TextWrapping="Wrap"
TextAlignment="Left"
Margin="0,15,0,0"/>

                    <PasswordBox x:Name="txtPasw"
                 
                  FontFamily="Georgia"
                  BorderBrush="#D8A25E"
                  BorderThickness="0,0,0,1"
                  Height="28"
                  VerticalContentAlignment="Center"
                  Margin="0,5,0,0"
                  PasswordChanged="PasswordBox_PasswordChanged"
                  Foreground="#A04747"
                  CaretBrush="#A04747"
                  Padding="25,0,0,0"
                                 
                                 >

                        <PasswordBox.Background>
                            <ImageBrush ImageSource="/imagini/lacat.png"
                             AlignmentX="Left"
                             Stretch="Uniform"
                                        />
                        </PasswordBox.Background>

                    </PasswordBox>

                    <Button Grid.Column="1"
        x:Name="btnLogin"
        Margin="0,50,0,0"
        BorderThickness="0"
        Content="LOG IN"
        Foreground="#343131"
        FontSize="20"
        Cursor="Hand"
        Command="{Binding LoginComand}"
        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
        FontFamily="Georgia">

                        <Button.Resources>
                            <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#D8A25E"/>
                        </Button.Resources>

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="{StaticResource ButtonBackgroundBrush}"/>
                                <Setter Property="RenderTransformOrigin" Value="0.5, 0.5"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                                    </Setter.Value>
                                </Setter>

                                <Style.Triggers>
                                    
                                    <EventTrigger RoutedEvent="MouseEnter">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                
                                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                             To="1.1" Duration="0:0:0.2"/>
                                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                             To="1.1" Duration="0:0:0.2"/>

                                               
                                                <ColorAnimation 
                                            Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                            To="#854836"
                                            Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>

                                    
                                    <EventTrigger RoutedEvent="MouseLeave">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                
                                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                             To="1" Duration="0:0:0.2"/>
                                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                             To="1" Duration="0:0:0.2"/>

                                                
                                                <ColorAnimation 
                                            Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                            To="#D8A25E"
                                            Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Height="40" Width="150"
                    CornerRadius="9"
                    Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                  HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <TextBlock
                        Margin="0,20,0,0"
                        Text="{Binding Msgeroare}"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Foreground="#A04747"/>

                </StackPanel>
            </Grid>

        </Border>
    </Border>



</Window>
